<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CRUD</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="wrapper">
        <div class="ui massive menu">
            <div class="ui container">
                <div class="header item">
                  <a href="/" class="link">Home</a>
                </div>
                <a class="item">
                  Blog
                </a>
                    <a class="item">
                      Contact
                </a>
                <a class="item">
                  About
                </a>
            </div>    
          </div>
          <br>
          <br>
          <br>
          <div class="ui container">
            <form action="/add" class="ui form" method="POST">
               <div class="ui three fields">
                    <div class="field">
                        <label for="nom" class="ui header green">Enter the Club Name</label>
                        <input type="text" name="nom">
                    </div>
                    <div class="field">
                        <label for="players" class="ui header green">Enter players Name</label>
                        <input type="text" name="players">
                    </div>
                    <div class="field">
                        <label for="coach" class="ui header green">Enter the Coach Name</label>
                        <input type="text" name="coach">
                    </div>
               </div>
               <div class="ui fluid field">
                <input type="submit" value="save" class="ui button inverted green fluid">
               </div>
            </form>
            <br><br>
            <table class="ui green table">
              <thead>
                <th>Club Name</th>
                <th>Player</th>
                <th>Coach</th>
                <th>Edit</th>
                <th>Delete</th>
              </thead>
              <tbody>
                <ul>
                  <% clubs.forEach(function(club){ %>
                    <tr>
                      <td><%- club.nom %></td>
                      <td><%- club.players %></td>
                      <td><%- club.coach %></td>
                      <td><a href="/edit/<%= club._id %>" class="ui purple button"><i class="edit outline icon"></i></a></td>
                      <td><a href="/delete/<%= club._id %>" class="ui red button"><i class="minus  icon"></i></a></td>
                    </tr>
                  <% }); %>
                </ul>
              </tbody>
            </table>
          </div>
    </div>
    


    <script src="/js/semantic.min.js"></script>
</body>
</html>